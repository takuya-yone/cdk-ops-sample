{
  "$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "nursery": {},
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "aws-cdk-lib": {
                "importNames": ["aws_lambda_nodejs"],
                "message": "use CustomNodejsFunction instead."
              },
              "@aws-cdk/aws-lambda-python-alpha": {
                "importNames": ["PythonFunction"],
                "message": "use CustomPythonFunction instead."
              }
            }
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
